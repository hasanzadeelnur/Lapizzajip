@model IEnumerable<TextTranslation>

@{
    ViewData["Title"] = "Text Translations";
}

@section Styles
{
    <!-- JQuery DataTable Css -->
    <link href="/admin/plugins/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.min.css" rel="stylesheet">
}

@section Scripts
{
    <!-- Jquery DataTable Plugin Js -->
    <script src="/admin/plugins/jquery-datatable/jquery.dataTables.js"></script>
    <script src="/admin/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
    <script src="/admin/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>

    <script>
        const dataGrid = $('#gridContainer').dxDataGrid({
            dataSource: DevExpress.data.AspNet.createStore({
                key: ['key', 'languageKey'],
                loadUrl: `@Url.Action("DevxList")`,
                loadMethod: "get",
                onBeforeSend(method, ajaxOptions) {
                    ajaxOptions.xhrFields = { withCredentials: false };
                },
            }),
            paging: {
                pageSize: 10,
            },
            pager: {
                visible: true,
                allowedPageSizes: [5, 10],
                showPageSizeSelector: true,
                showInfo: true,
                showNavigationButtons: true,
            },
            grouping: {
                autoExpandAll: false,
            },
            groupPanel: {
                visible: true,
            },
            remoteOperations: true,
            filterRow: {
                visible: true,
            },
            selection: {
                mode: 'multiple',
            },
            onSelectionChanged: function (e) {
                multipleDeleteDataArray = [];
                $.each(dataGrid.getSelectedRowsData(), function (index, value) {
                    multipleDeleteDataArray.push(value.id);
                });
                if (dataGrid.getSelectedRowsData().length > 0) {
                    $("#multiDeleteId").prop("disabled", false);
                }
                else {
                    $("#multiDeleteId").prop("disabled", true);
                }
            },
            showBorders: true,
            sorting: {
                mode: 'multiple',
            },
            columns: [ {
                dataField: 'key',
                caption: 'Key',
            },
            {
                dataField: 'value',
                caption: 'Value',
            },
            {
                dataField: 'languageKey',
                caption: 'Language',
            },
            {
                dataField: 'id',
                caption: '',
                width: 110,
                allowFiltering: false,
                allowSorting: false,
                cellTemplate(container, options) {
                    $('<div>')
                        .append($(`<a href="/TextTranslations/update/${options.value}"><i class="material-icons">mode_edit</i></a>`))
                        .appendTo(container);
                },
            }
            ]
        }).dxDataGrid("instance");
    </script>
}

<!-- Basic Examples -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
                <ul class="header-dropdown m-r--5">
                </ul>
            </div>
            <div class="body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div id="gridContainer"></div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Basic Examples -->