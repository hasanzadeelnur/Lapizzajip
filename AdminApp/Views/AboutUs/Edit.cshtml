@using Domain.Entities
@model AboutUs

@{
    ViewData["Title"] = "Edit About Us";
}

@section Styles
{
}

@section Scripts
{

    <script src="~/admin/js/filemanager.js"></script>

    <!-- TinyMCE -->
    <script src="~/admin/plugins/tinymce/tinymce.js"></script>

    <script>
        $(function () {
            //TinyMCE
            tinymce.init({
                selector: "textarea.tinymce",
                theme: "modern",
                height: 300,
                plugins: [
                    'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                    'searchreplace wordcount visualblocks visualchars code fullscreen',
                    'insertdatetime media nonbreaking save table contextmenu directionality',
                    'emoticons template paste textcolor colorpicker textpattern imagetools'
                ],
                toolbar1: 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
                toolbar2: 'print preview media | forecolor backcolor emoticons',
                image_advtab: true
            });
            tinymce.suffix = ".min";
            tinyMCE.baseURL = '/admin/plugins/tinymce';
        });
    </script>
}

<partial name="_FileManagerModalPartial" />

<!-- Vertical Layout -->
<div class="row clearfix">
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <form enctype="multipart/form-data" method="post" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="LanguageKey" />

                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <div class="form-line">
                                    <label asp-for="FirstImagePath" class="control-label"></label>
                                    <input asp-for="FirstImagePath" class="form-control" />
                                    <span asp-validation-for="FirstImagePath" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <button type="button" class="btn btn-default waves-effect m-r-20" onclick='defineParameterName("FirstImagePath")' data-toggle="modal" data-target="#file-manager-popup">Select Image</button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="FirstBody" class="control-label"></label>
                            <textarea asp-for="FirstBody" class="tinymce form-control"></textarea>
                            <span asp-validation-for="FirstBody" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <div class="form-line">
                                    <label asp-for="SecondImagePath" class="control-label"></label>
                                    <input asp-for="SecondImagePath" class="form-control" />
                                    <span asp-validation-for="SecondImagePath" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <button type="button" class="btn btn-default waves-effect m-r-20" onclick='defineParameterName("SecondImagePath")' data-toggle="modal" data-target="#file-manager-popup">Select Image</button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="SecondBody" class="control-label"></label>
                            <textarea asp-for="SecondBody" class="tinymce form-control"></textarea>
                            <span asp-validation-for="SecondBody" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="StoryBody" class="control-label"></label>
                            <textarea id="tinymce" asp-for="StoryBody" class="tinymce form-control"></textarea>
                            <span asp-validation-for="StoryBody" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="MetaTitle" class="control-label"></label>
                            <input asp-for="MetaTitle" class="form-control" />
                            <span asp-validation-for="MetaTitle" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="MetaDescription" class="control-label"></label>
                            <textarea asp-for="MetaDescription" class="form-control"></textarea>
                            <span asp-validation-for="MetaDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="MetaKeys" class="control-label"></label>
                            <input asp-for="MetaKeys" class="form-control" />
                            <span asp-validation-for="MetaKeys" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- #END# Vertical Layout -->