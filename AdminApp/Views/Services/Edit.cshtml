@model Service

@{
    ViewData["Title"] = "Edit Service";
    SelectList? languages = ViewData["Languages"] as SelectList;
}

@section Styles
{
}

@section Scripts
{
    <script src="/admin/js/filemanager.js"></script>

    <!-- TinyMCE -->
    <script src="/admin/plugins/tinymce/tinymce.js"></script>

    <script>
        $(function () {
            //TinyMCE
            tinymce.init({
                selector: "textarea.tinymce",
                theme: "modern",
                height: 300,
                plugins: [
                    'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                    'searchreplace wordcount visualblocks visualchars code fullscreen',
                    'insertdatetime media nonbreaking save table contextmenu directionality',
                    'emoticons template paste textcolor colorpicker textpattern imagetools'
                ],
                toolbar1: 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
                toolbar2: 'print preview media | forecolor backcolor emoticons',
                image_advtab: true
            });
            tinymce.suffix = ".min";
            tinyMCE.baseURL = '/admin/plugins/tinymce';
        });

        $(".lang-class").change(function () {
            console.log(this.value);
            $.getJSON(`/blogs/categories/${this.value}`, function (data) {
            }).done(function (data) {
                $('.categories-class').empty();
                $.each(data, function (key, value) {
                    $('.categories-class').append(`<option value="${value.id}">${value.name}</option>`);
                });
                if (data.length < 9)
                    $('#loadMoreButton').attr('style', 'display:none !important;');
            }).fail(function (data, textStatus, error) {
            });
        });
    </script>
}

<partial name="_FileManagerModalPartial" />

<!-- Vertical Layout -->
<div class="row clearfix">
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @ViewData["Title"]
                </h2>
            </div>
            <div class="body">
                <form enctype="multipart/form-data" method="post" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="LanguageKey" class="control-label"></label>
                            <select asp-for="LanguageKey" asp-items="languages" class="form-control">
                            </select>
                            <span asp-validation-for="LanguageKey" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="Subtitle" class="control-label"></label>
                            <input asp-for="Subtitle" class="form-control" />
                            <span asp-validation-for="Subtitle" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <div class="form-line">
                                    <label asp-for="ImagePath" class="control-label"></label>
                                    <input asp-for="ImagePath" class="form-control" />
                                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <button type="button" class="btn btn-default waves-effect m-r-20" onclick='defineParameterName("ImagePath")' data-toggle="modal" data-target="#file-manager-popup">Select Image</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <label asp-for="Status" class="control-label"></label>
                        <div class="switch">
                            <label>Passive<input asp-for="Status" type="checkbox"><span class="lever"></span>Active</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            <label asp-for="Order" class="control-label"></label>
                            <input asp-for="Order" class="form-control" />
                            <span asp-validation-for="Order" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- #END# Vertical Layout -->